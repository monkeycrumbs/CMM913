<h2>Editing answer</h2>

<%= error_messages_for :answer %>

<% form_for([@question, @answer]) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', question_answer_path(@question, @answer) %> |
<%= link_to 'Back', question_answers_path(@question) %>
