<h1>Listing users</h1>

<table>
  <tr class="thead">
    <th>Login</th>
    <th>Email</th>
	<th>Admin</th>
	<th></th>
	<th></th>
	<th></th>
  </tr>

<% for user in @users %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>
	<td><%=h user.admin %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

