<h2>Listing responses</h2>

<%= link_to 'New response', new_survey_response_path(@survey) %>

<table>
  <tr class="thead">
    <th>Survey</th>
    <th>User</th>
    <th>Ip address</th>
	<th>Answers</th>
	<th></th>
	<th></th>
	<th></th>
  </tr>

<% for response in @responses %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><%=h response.survey_id %></td>
    <td><%=h response.user.login if response.user %></td>
    <td><%=h response.ip_address %></td>
	<td><%=h response.answers.count %></td>
    <td><%= link_to 'Show', survey_response_path(@survey, response) %></td>
    <td><%= link_to 'Edit', edit_survey_response_path(@survey, response) %></td>
    <td><%= link_to 'Destroy', survey_response_path(@survey, response), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New response', new_survey_response_path(@survey) %>
