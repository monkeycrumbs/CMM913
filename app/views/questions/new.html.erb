<div id="left_column">
  <h2>New question</h2>

  <%= error_messages_for :question %>

  <% form_for([@survey, @question]) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>

    <p>
      <%= f.submit "Create" %>
    </p>
  <% end %>

  <%= link_to 'Back', survey_path(@survey) %>
</div>
<div id="right_column">
  <h2>Question Types</h2>
  <% @questionTypes.each do |type| %>
    <h4><%= type.name.capitalize %></h4>
    <p><%= type.description %></p>
  <% end %>
</div>