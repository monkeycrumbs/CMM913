<h2>Editing option</h2>

<%= error_messages_for :option %>

<% form_for([@question, @option]) do |f| %>
  <p>
    <b>Label</b><br />
    <%= f.text_field :label %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', question_option_path(@question, @option) %> |
<%= link_to 'Back', survey_question_path(@survey, @question) %>
