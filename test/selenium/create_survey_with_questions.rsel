setup
include_partial 'login', :login => 'tino', :password => 'test'
open '/surveys'
open "/"
click "link=New survey"
wait_for_page_to_load "30000"
type "survey_title", "Test Survey title"
select "survey_survey_type_id", "label=Public"
type "survey_introduction", "Introduction"
type "survey_thank_you_message", "Thanks"
select "survey_ends_at_2i", "label=December"
click "survey_submit"
wait_for_page_to_load "30000"
click "//div[@id='left_column']/div[2]/div/a"
wait_for_page_to_load "30000"
type "question_title", "text question"
assert_text_present "New question"
type "question_help_text", "help text"
assert_text_present "This is an example of help text"
click "question_submit"
wait_for_page_to_load "30000"
assert_text_present "1. text question"
assert_text_present "help text"
click "link=Back"
wait_for_page_to_load "30000"
click "//div[@id='left_column']/div[2]/div/a"
wait_for_page_to_load "30000"
select "question_type_id", "label=radio"
type "question_title", "radio"
assert_text_present "Add options for select drop downs, radio buttons, checkboxes and likert questions"
type "question_new_option_attributes__label", "option one"
click "question_submit"
wait_for_page_to_load "30000"
click "link=Back"
wait_for_page_to_load "30000"
click "//div[@id='left_column']/div[2]/div/a"
wait_for_page_to_load "30000"
select "question_type_id", "label=select"
type "question_title", "select"
type "question_new_option_attributes__label", "option one"
click "link=Add an option"
type "question_new_option_attributes__label", "option two"
click "question_submit"
wait_for_page_to_load "30000"
assert_text_present "Question was successfully created."
click "link=Back"
wait_for_page_to_load "30000"
click "//div[@id='left_column']/div[2]/div/a"
wait_for_page_to_load "30000"
select "question_type_id", "label=date"
type "question_title", "date"
click "question_submit"
wait_for_page_to_load "30000"
assert_text_present "Type: date"
click "link=Back"
wait_for_page_to_load "30000"